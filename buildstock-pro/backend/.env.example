# Supabase Configuration
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Database (Direct connection - optional, for raw SQL queries)
DATABASE_URL=postgresql://user:password@host:port/database

# API Configuration
PORT=10000
NODE_ENV=production
CORS_ORIGIN=https://buildstock.pro

# JWT Secret for API authentication
JWT_SECRET=generate-strong-secret-in-production

# Sentry (Error monitoring)
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=production

# Sync API Key (for triggering merchant sync)
SYNC_API_KEY=generate-strong-api-key

# Price Scraper Configuration
# Whether to use mock data for scraping (set to 'false' in production)
USE_MOCK_DATA=false
# Rate limiting: milliseconds between requests (default: 2000)
SCRAPER_RATE_LIMIT_MS=2000
# Maximum concurrent scraping requests (default: 3)
SCRAPER_MAX_CONCURRENT=3

# Merchant API Keys (optional - add as needed)
SCREWFIX_API_KEY=
WICKES_API_KEY=
BANDQ_API_KEY=
JEWSON_API_KEY=
